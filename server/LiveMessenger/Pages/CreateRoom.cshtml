@page
@model LiveMessenger.Pages.CreateRoomModel
@{
    ViewData["Title"] = "Skapa rum";
}

@section Links {
    <script src="~/js/privateRoom.js"></script>
}

<form class="col-sm-12 col-md-4 mx-auto my-5 d-block d-flex flex-column justify-content-center" style="color: #004e7c;" method="POST">
    <legend class="text-center"><b>Skapa ett rum</b></legend>
    <div class="mb-3">
        <label for="roomName" class="form-label"><b>Rumsnamn</b></label>
        <input type="text" class="form-control" id="roomName" name="roomName" placeholder="Rumsnamn" maxlength="15" required>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label"><b>Beskriving</b></label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Beskriving" maxlength="70" required>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="privateRoomCheck" onclick="privateRoom()">
        <label class="form-check-label" for="privateRoomCheck" style="color: #000;">Privat rum</label>
    </div>
    <div class="mb-3" id="private" hidden>
        <label for="password" class="form-label"><b>Lösenord</b></label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Lösenord" maxlength="69">
        <div class="form-text h6" style="color: #000;"><small>Detta lösenord kommer inte krypteras!</small></div>
    </div>
    <button type="submit" class="btn btn-primary w-50 mx-auto mt-2 btnColor" >Skapa rummet</button>
</form>


