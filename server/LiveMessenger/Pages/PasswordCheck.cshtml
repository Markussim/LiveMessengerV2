@page
@using LiveMessenger.Pages
@model PasswordCheckModel
@{
    ViewData["Title"] = "Lösenord";
}

<form class="col-4 mx-auto my-5 d-block d-flex flex-column justify-content-center" style="color: #004e7c;" method="POST">
    <legend class="text-center"><b>Detta rum är privat!</b></legend>
    <div class="mb-3">
        <label for="password" class="form-label"><b>Lösenord</b></label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Lösenord" maxlength="69" required>
    </div>
    <button type="submit" class="btn btn-primary w-50 mx-auto mt-2" style="background-color: #004e7c;">Bekräfta</button>
</form>
